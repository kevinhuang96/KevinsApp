<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculator.Trig_Screen">

    <TextView
        android:id="@+id/MainScreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttoneConstant"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonDelClear"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonpiConstant" />

    <Button
        android:id="@+id/buttonDelClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/del_clear_button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonFRAC"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonFRAC"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonClosedParenth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/close_parenthesis"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonOpenParenth"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonOpenParenth"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_function"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonTan"
        app:layout_constraintLeft_toRightOf="@+id/buttonTan"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/subtract_function"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/multiply_function"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/divide_function"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Enter_button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonDotNegative"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDotNegative"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonFRAC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Frac_function"
        app:layout_constraintLeft_toRightOf="@+id/buttonpiConstant"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonpiConstant" />

    <Button
        android:id="@+id/buttonOpenParenth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/open_parenthesis"
        app:layout_constraintLeft_toRightOf="@+id/buttonInverse"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonInverse" />

    <Button
        android:id="@+id/buttonTan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tan_function"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonCos"
        app:layout_constraintLeft_toRightOf="@+id/buttonCos"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/three_number"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/six_number"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nine_number"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8" />

    <Button
        android:id="@+id/buttonDotNegative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dot_negative"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0" />

    <Button
        android:id="@+id/buttonpiConstant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pi_constant"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintLeft_toRightOf="@+id/buttoneConstant"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttoneConstant" />

    <Button
        android:id="@+id/buttonInverse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/inverse_function"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintLeft_toRightOf="@+id/buttonPower"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPower" />

    <Button
        android:id="@+id/buttonCos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cos_function"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonSin"
        app:layout_constraintLeft_toRightOf="@+id/buttonSin"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/two_number"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/five_number"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/eight_number"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7" />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/zero_number"
        app:layout_constraintLeft_toRightOf="@+id/buttonE"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonE" />

    <Button
        android:id="@+id/buttoneConstant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/e_constant"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPower" />

    <Button
        android:id="@+id/buttonPower"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/power_function"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSin" />

    <Button
        android:id="@+id/buttonSin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sin_function"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/one_number"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/four_number"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/seven_number"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonE" />

    <Button
        android:id="@+id/buttonE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/E_function"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
